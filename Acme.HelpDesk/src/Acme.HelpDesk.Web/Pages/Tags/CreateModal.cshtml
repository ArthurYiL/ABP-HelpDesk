@page
@inherits Acme.HelpDesk.Web.Pages.HelpDeskPage
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Acme.HelpDesk.Tags;
@using System.Globalization
@model  Acme.HelpDesk.Web.Pages.Tags.CreateModalModel
@{
    Layout = null;
}
<form data-ajaxForm="true" asp-page="/Tags/CreateModal" autocomplete="off">
    <abp-modal>
        <abp-modal-header title="@L["NewTag"].Value"></abp-modal-header>

        <abp-modal-body>
            
            <abp-input asp-for="Tag.Name"/>

            
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>